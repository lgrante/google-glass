<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/activity_device_list_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/device_list_msg"
        android:textSize="28dp"
        android:textColor="@color/text"
        android:fontFamily="@font/lilitaone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/bluetooth_logo" />

    <TextView
        android:id="@+id/activity_device_list_paired_device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/paired_device_title"
        android:textSize="24dp"
        android:textColor="@color/text"
        android:fontFamily="@font/lilitaone" />

    <ListView
        android:id="@+id/activity_list_paired_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/activity_device_list_device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/device_title"
        android:textSize="22dp"
        android:textColor="@color/text"
        android:fontFamily="@font/lilitaone" />

    <ListView
        android:id="@+id/activity_list_device_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />


</LinearLayout>